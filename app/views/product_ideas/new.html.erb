<h1>New Product Idea</h1>

<%= form_with(model: @product_idea, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', product_ideas_path %>
